<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5sp"
            android:background="#90eff0fd"
            android:src="@drawable/intestazione_pensi" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/testoValutaApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/layout_corners"
                android:text="Spendi qualche secondo per lasciare una recensione. Ci servirà per rendere migliore la qualità delle vostre vacanze! ;)\n\nCosa ne pensi di:"
                android:textColor="@color/Black"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/layout_corners"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/pulizia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Pulizia:"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/ratingBarPulizia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:id="@+id/cordialita"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Cordialità:"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/ratingBarCordialita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:id="@+id/prezzi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Prezzi:"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Più stelle = miglior rapporto qualità prezzo"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <RatingBar
                    android:id="@+id/ratingBarPrezzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:id="@+id/punteggioGenerale"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Punteggio generale:"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/ratingBarPunteggio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/layout_corners"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="eMail: (opzionale)"
                    android:textColor="@color/Black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="10sp"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/altro"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Altro:"
                    android:textColor="@color/Black"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editTextAltro"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="10sp"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="textMultiLine" >
                </EditText>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/buttonInvia"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:text="Invia"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>