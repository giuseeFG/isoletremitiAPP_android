<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layoutPadreHotel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/layout_corners"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="150sp"
                        android:layout_height="150sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/ic_launcher" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:orientation="vertical" >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/layout_corners"
                        android:orientation="vertical" >
                    <LinearLayout
                        android:id="@+id/layoutDettagliHotelSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10sp"
                        
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textViewNome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            
                            android:gravity="center|center_vertical"
                            android:shadowColor="@color/text_shadow"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="5"
                            android:text="Nome: "
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#4F2412"
                            android:textSize="40sp" />
                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textDaRendereBoldTel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="15sp"
                                android:text="Tel: "
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#4F2412"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewTel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:text="Tel: "
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#4F2412"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textDaRendereBoldEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="15sp"
                                android:text="Email: "
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#4F2412"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:text="Email: "
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#4F2412"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textDaRendereBoldWeb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="15sp"
                                android:text="Web: "
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#4F2412"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewWeb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:text="Web: "
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#4F2412"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/buttonActivityDisponibilitaDettagliHotelSecond"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8sp"
                            android:layout_marginLeft="15sp"
                            
                            android:text="Button" />
                        <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="8sp"
                    android:text="Descrizione:"
                    android:textColor="#4F2412"
                    android:textSize="18sp" />
                        <TextView
                    android:id="@+id/textViewDescrizione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="5sp"
                    android:text="Questa Ã¨ la descrizione"
                    android:textColor="#4F2412"
                    android:textSize="18sp" />
                        <Button
                    android:id="@+id/buttonAggiungiPreferiti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="10sp"
                    android:text="AGGIUNGI AI PREFERITI" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/layout_corners"
                android:orientation="vertical" >

                

                

                

                <Button
                    android:id="@+id/buttonRimuoviPreferiti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="RIMUOVI DAI PREFERITI" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutMappaGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1000" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />

                <FrameLayout
                    android:id="@+id/mappaGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="300sp"
                    android:layout_marginBottom="15sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="15sp"
                    android:background="#0099cc"
                    android:fitsSystemWindows="true" >

                    <fragment
                        android:id="@+id/map2"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageButton
                        android:id="@+id/buttonGetPOILocationSecond"
                        android:layout_width="44dp"
                        android:layout_height="42dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="55sp"
                        android:layout_marginTop="5sp"
                        android:background="#00000000"
                        android:clickable="true"
                        android:src="@drawable/marker_red2" />

                    <ImageButton
                        android:id="@+id/buttonGetCurrentLocationSecond"
                        android:layout_width="44dp"
                        android:layout_height="42dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5sp"
                        android:background="#00000000"
                        android:src="@drawable/gps2" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>